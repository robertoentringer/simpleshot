{
  "name": "Simpleshot",
  "version": "0.1",
  "description": "Take a screenshot from current tab",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "Take a screen shot!"
  },
  "permissions": ["activeTab", "downloads"],
  "manifest_version": 2
}
